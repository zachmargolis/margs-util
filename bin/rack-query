#!/usr/bin/env ruby
require 'rack/utils'
require 'uri'
require 'pp'
require 'base64'

decode_base64 = (ARGV.first == '--base64') ? ARGV.shift : nil

if STDIN.tty? && ARGV.empty?
  abort <<-STR
Pretty-prints rack-style query params
Usage:
  #{$0} URL [--base64]
  echo URL | #{$0} [--base64]

Options:
  --base64 base64 decodes values inside URL params
STR
  exit 1
end

uri = URI.parse((STDIN.tty? || ARGV.first) ? ARGV.first : STDIN.read.chomp)
query = Rack::Utils.parse_nested_query(uri.query)

if decode_base64
  query = query.map do |key, value|
    [ key, Base64.urlsafe_decode64(value) ]
  end.to_h
end

puts uri.dup.tap { |u| u.query = nil; u.fragment = nil }.to_s
pp query
